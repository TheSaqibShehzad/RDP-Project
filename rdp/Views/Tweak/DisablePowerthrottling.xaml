<UserControl x:Class="rdp.Views.Tweak.DisablePowerthrottling"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:rdp.Views.Tweak"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#111111" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header Section: Title and Toggle -->
            <Grid Grid.Row="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="Disable Powerthrottling"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center" />

                <!-- Toggle Button -->
                <ToggleButton Grid.Column="1"
                              Width="50" Height="25"
                              Margin="10,0,0,0"
                              Background="#373737"
                              Foreground="White"
                              BorderThickness="0"
							  Checked ="Toggle_Checked"
                              Unchecked="Toggle_UnChecked"
                              IsChecked="False">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Border x:Name="SwitchBackground"
                                                    Width="50" Height="25"
                                                    Background="#373737"
                                                    CornerRadius="12.5" />
                                            <Ellipse x:Name="Knob"
                                                     Width="20" Height="20"
                                                     Fill="White"
                                                     HorizontalAlignment="Left"
                                                     Margin="5,0,0,0" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="SwitchBackground" Property="Background" Value="red" />
                                                <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Right" />
                                                <Setter TargetName="Knob" Property="Margin" Value="0,0,5,0" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
            </Grid>

            <!-- Description Section -->
            <TextBlock Grid.Row="1"
                       Text="Disables various power and performance optimization settings, including coalescing timers, energy estimation, and power throttling, to prioritize system stability and performance over energy-saving features."
                       TextWrapping="Wrap"
                       Foreground="LightGray"
                       Margin="0,10,0,10"
                       FontSize="16" />

            <!-- Warning Section -->
            <Grid Grid.Row="2" VerticalAlignment="Bottom" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Warning Icon and Text -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconBlock Icon="ExclamationTriangle" Foreground="Orange" FontSize="18" />
                    <TextBlock Text=" Feature Breaking"
                               Foreground="Orange"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0" />
                </StackPanel>

        
                    <fa:IconBlock Grid.Column="1" Icon="InfoCircle" Foreground="White" FontSize="18" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
